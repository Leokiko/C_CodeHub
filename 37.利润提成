#include<stdio.h>
int main() {
	int n,r;
	scanf("%d",&n);
	if(0<n&&n<=100000)
		r=n*0.1;
	else if (100000<n&&n<=200000)
		r=10000+(n-100000)*0.075;
	else if (200000<n&&n<=400000)
		r=17500+(n-200000)*0.05;
	else if (400000<n&&n<=600000)
		r=27500+(n-100000)*0.03;
	else if (600000<n&&n<=1000000)
		r=33500+(n-100000)*0.015;
	else
		r=39500+(n-1000000)*0.01;
	printf("%d\n",r);
	return 0;
}